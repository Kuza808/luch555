<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700" prefWidth="1000" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.luch.controller.LoginController">
    <VBox alignment="CENTER" prefHeight="700" prefWidth="1000" spacing="20" style="-fx-background-color: white;">
        <padding>
            <Insets bottom="50" left="50" right="50" top="50"/>
        </padding>

        <Label text="Restaurant Luch" style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>

        <Label text="Вход в систему" style="-fx-font-size: 28; -fx-text-fill: #555;"/>

        <TextField fx:id="usernameField" prefHeight="40" prefWidth="300" promptText="Введите имя пользователя" style="-fx-font-size: 14; -fx-padding: 10;"/>

        <PasswordField fx:id="passwordField" prefHeight="40" prefWidth="300" promptText="Введите пароль" style="-fx-font-size: 14; -fx-padding: 10;"/>

        <Label fx:id="errorLabel" text="" style="-fx-font-size: 12;"/>

        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="45" prefWidth="300" text="Войти" style="-fx-font-size: 16; -fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <Button onAction="#handleRegister" prefHeight="45" prefWidth="300" text="Зарегистрироваться" style="-fx-font-size: 14; -fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </VBox>
</AnchorPane>
