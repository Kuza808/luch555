<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.luch.controller.ProfileController">
    <VBox spacing="30" style="-fx-padding: 50; -fx-background-color: white; -fx-max-width: 600; -fx-border-radius: 10;" layoutX="300" layoutY="100">
        <Label text="Ваш профиль" style="-fx-font-size: 32; -fx-font-weight: bold;"/>

        <Label fx:id="nameLabel" text="Имя: ..." style="-fx-font-size: 18;"/>
        <Label fx:id="usernameLabel" text="Логин: ..." style="-fx-font-size: 18;"/>
        <Label fx:id="phoneLabel" text="Телефон: ..." style="-fx-font-size: 18;"/>
        <Label fx:id="emailLabel" text="Email: ..." style="-fx-font-size: 18;"/>

        <Button fx:id="backButton" text="Назад" onAction="#handleBack" style="-fx-font-size: 16; -fx-background-color: #2e7d32; -fx-text-fill: white; -fx-padding: 12 40 12 40;"/>
        <Button fx:id="logoutButton" text="Выйти" onAction="#handleLogout" style="-fx-font-size: 16; -fx-background-color: #c70000; -fx-text-fill: white; -fx-padding: 12 40 12 40;"/>
    </VBox>
</AnchorPane>
