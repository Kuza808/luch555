<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="800" prefWidth="1200" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.luch.controller.CartController">
    <VBox prefHeight="800" prefWidth="1200" spacing="20" style="-fx-padding: 30;">
        <Label text="Ваша корзина" style="-fx-font-size: 32; -fx-font-weight: bold;"/>

        <VBox fx:id="cartItemsContainer" style="-fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 10;" VBox.vgrow="ALWAYS"/>

        <Label text="Адрес доставки:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <TextField fx:id="addressField" promptText="Введите адрес доставки" prefHeight="40" style="-fx-font-size: 14;"/>

        <Label text="Способ оплаты:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <ComboBox fx:id="paymentMethodCombo" prefHeight="40" style="-fx-font-size: 14;"/>

        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Label fx:id="totalLabel" text="Итого: 0 ₽" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
            <Button fx:id="placeOrderButton" text="Оформить заказ" onAction="#handlePlaceOrder" style="-fx-font-size: 16; -fx-background-color: #2e7d32; -fx-text-fill: white; -fx-padding: 12 40 12 40;"/>
            <Button fx:id="backButton" text="Назад" onAction="#handleBack" style="-fx-font-size: 14; -fx-background-color: #666; -fx-text-fill: white; -fx-padding: 12 30 12 30;"/>
        </HBox>
    </VBox>
</AnchorPane>
