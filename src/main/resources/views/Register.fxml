<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="800" prefWidth="1000" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.restaurant.luch.controller.RegisterController">
    <VBox alignment="CENTER" prefHeight="800" prefWidth="1000" spacing="20" style="-fx-background-color: white; -fx-max-width: 400;">
        <Label text="Регистрация" style="-fx-font-size: 28; -fx-font-weight: bold;"/>

        <TextField promptText="ФИО" prefHeight="40" style="-fx-font-size: 14;"/>
        <TextField promptText="Номер телефона" prefHeight="40" style="-fx-font-size: 14;"/>
        <TextField promptText="Имя пользователя" prefHeight="40" style="-fx-font-size: 14;"/>
        <PasswordField promptText="Пароль" prefHeight="40" style="-fx-font-size: 14;"/>
        <PasswordField promptText="Подтверждение пароля" prefHeight="40" style="-fx-font-size: 14;"/>
        <TextField promptText="Email (опционально)" prefHeight="40" style="-fx-font-size: 14;"/>

        <Button text="Зарегистрироваться" prefHeight="45" prefWidth="300" style="-fx-font-size: 16; -fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Вернуться на вход" prefHeight="45" prefWidth="300" style="-fx-font-size: 14; -fx-background-color: #666; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>
